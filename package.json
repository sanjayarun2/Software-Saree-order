{
  "name": "saree-order-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cap:sync": "npm run build && npx cap sync",
    "cap:android": "npx cap open android",
    "android": "npm run cap:sync && npm run cap:android",
    "apk:build": "npm run build && npx cap sync",
    "apk": "npm run apk:build && cd android && gradlew.bat assembleDebug",
    "apk:auto": "powershell -ExecutionPolicy Bypass -File build-and-install.ps1",
    "apk:install": "powershell -ExecutionPolicy Bypass -File download-and-install.ps1",
    "debug": "powershell -ExecutionPolicy Bypass -File debug-app.ps1",
    "debug:clear": "powershell -ExecutionPolicy Bypass -File debug-app.ps1 -Clear",
    "debug:all": "powershell -ExecutionPolicy Bypass -File debug-app.ps1 -Filter:$false",
    "test:pdf": "powershell -ExecutionPolicy Bypass -File test-pdf-feature.ps1",
    "test:pdf:watch": "powershell -ExecutionPolicy Bypass -File test-pdf-download.ps1 -Watch",
    "debug:webview": "powershell -ExecutionPolicy Bypass -File enable-webview-debug.ps1",
    "monitor:pdf": "powershell -ExecutionPolicy Bypass -File monitor-pdf-issue.ps1",
    "test:pdf:auto": "powershell -ExecutionPolicy Bypass -File auto-test-pdf.ps1",
    "compress:icons": "node scripts/compress-icons.js"
  },
  "dependencies": {
    "@capacitor-community/file-opener": "^6.0.1",
    "@capacitor/android": "^6.1.2",
    "@capacitor/app": "^6.0.2",
    "@capacitor/browser": "^6.0.6",
    "@capacitor/camera": "^6.1.3",
    "@capacitor/core": "^6.1.2",
    "@capacitor/filesystem": "^6.0.4",
    "@capacitor/keyboard": "^6.0.2",
    "@capacitor/preferences": "^6.0.2",
    "@capacitor/share": "^6.0.4",
    "@capacitor/splash-screen": "^6.0.2",
    "@supabase/supabase-js": "^2.45.0",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "idb-keyval": "^6.2.2",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^5.0.7",
    "next": "15.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.2",
    "@eslint/eslintrc": "^3",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.5",
    "postcss": "^8.4.47",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "capacitor": {
    "platforms": [
      "android"
    ]
  }
}
